<%= form_for @answer, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Answer</legend>

    <div class="control-group">
      <%= f.label :answer, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :answer, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :question_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :question_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :status, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :status, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', answers_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
