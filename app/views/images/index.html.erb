<h1>Images</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Path</th>
      <th>Question_id</th>
      <th>Answer_id</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.id %></td>
        <td><%= link_to image.name, image_path(image) %></td>
         <td><%= image.path %></td>
        <td><%= image.question_id %></td>
        <td><%= image.answer_id %></td>
        <td>
          <%= link_to 'Edit', edit_image_path(image), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', image_path(image), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_image_path, :class => 'btn btn-primary' %>
