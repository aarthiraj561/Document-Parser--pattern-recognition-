<h1>/Image</h1>

<p>
  <b>Name</b><br>
  <%= @image.name %>
</p>

<p>
  <b>Path</b><br>
  <%= @image.path %>
</p>

<p>
  <b>Question</b><br>
  <%= @image.question_id %>
</p>

<div class="form-actions">
  <%= link_to 'Back', images_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_image_path(@image), :class => 'btn' %>
  <%= link_to 'Delete', image_path(@image), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
