<%= form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Question</legend>

    <div class="control-group">
      <%= f.label :question, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :question, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :topic_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :topic_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :subtopic_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :sub_topic_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :direction, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :direction, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :positive_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :positive_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :negative_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :negative_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :difficulty_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :difficulty_id, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :passage_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :passage_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :question_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :question_type, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :ans_status, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :ans_status, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', questions_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
