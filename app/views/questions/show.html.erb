<h1>/Question</h1>

<p>
  <b>Question</b><br>
  <%= @question.question %>
</p>

<p>
  <b>Topic</b><br>
  <%= @question.topic_id %>
</p>

<p>
  <b>Subtopic</b><br>
  <%= @question.sub_topic_id %>
</p>

<p>
  <b>Direction</b><br>
  <%= @question.direction %>
</p>

<p>
  <b>Positive</b><br>
  <%= @question.positive_id %>
</p>

<p>
  <b>Negative</b><br>
  <%= @question.negative_id %>
</p>

<p>
  <b>Difficulty</b><br>
  <%= @question.difficulty_id %>
</p>

<p>
  <b>Passage</b><br>
  <%= @question.passage_id %>
</p>

<p>
  <b>Question type</b><br>
  <%= @question.question_type %>
</p>

<p>
  <b>Ans status</b><br>
  <%= @question.ans_status %>
</p>

<div class="form-actions">
  <%= link_to 'Back', questions_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_question_path(@question), :class => 'btn' %>
  <%= link_to 'Delete', question_path(@question), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
