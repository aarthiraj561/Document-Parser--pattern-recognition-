<h1>Passages</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Passage</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @passages.each do |passage| %>
      <tr>
        <td><%= passage.id %></td>
        <td><%= link_to passage.passage, passage_path(passage) %></td>
        <td>
          <%= link_to 'Edit', edit_passage_path(passage), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', passage_path(passage), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_passage_path, :class => 'btn btn-primary' %>
